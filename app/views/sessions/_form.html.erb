<%# USER LOGIN FORM %>

<form action="<%= session_url %>" method="POST" id="user_create_form">
  <%= form_auth_field %>
  <div class="form-group">
    <label for="user_email" >Email: </label>
    <input class="form-control" 
           type="email" 
           name="user[email]" 
           id="user_email"
           value="<%= @email %>">
  </div>
  <div class="form-group">
    <label for="user_password">Password: </label>
    <input type="password" 
           id="user_password" 
           class="form-control" 
           name="user[password]">
  </div>
  <input type="submit" class="btn btn-default" value="Login">
</form>